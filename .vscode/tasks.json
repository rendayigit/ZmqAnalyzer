{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run App",
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": ["zmq_analyzer.py"],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Install App",
      "type": "shell",
      "command": "chmod +x ./install.sh && sudo ./install.sh",
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "runOptions": { "reevaluateOnRerun": false }
    },
    {
      "label": "Uninstall App",
      "type": "shell",
      "command": "chmod +x ./uninstall.sh && sudo ./uninstall.sh",
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "runOptions": { "reevaluateOnRerun": false }
    },
    {
      "label": "Install Dependencies",
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": ["-m", "pip", "install", "-r", "requirements.txt"],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}
